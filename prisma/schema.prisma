generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String        @id @default(cuid())
  email String        @unique
  name  String
  image String?
  ideas ProjectIdea[]
}

model ProjectIdea {
  id          Int @id  @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}